<div id="<%= dom_id in_person_recovery_resource %>">
  <p>
    <strong>Name:</strong>
    <%= in_person_recovery_resource.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= in_person_recovery_resource.address %>
  </p>

  <p>
    <strong>Website:</strong>
    <%= in_person_recovery_resource.website %>
  </p>

  <table>
      <tr>
        <th></th>
        <th>Opens at:</th>
        <th>Closes at:</th>
      </tr>
      <tr>
        <td>Monday</td>
        <td><%= in_person_recovery_resource.monday_opening_hours.strftime('%I:%M %p') %></td>
        <td><%= in_person_recovery_resource.monday_closing_hours.strftime('%I:%M %p') %></td>
      </tr>
      <tr>
        <td>Tuesday</td>
        <td><%= in_person_recovery_resource.tuesday_opening_hours.strftime('%I:%M %p') %></td>
        <td><%= in_person_recovery_resource.tuesday_closing_hours.strftime('%I:%M %p') %></td>
      </tr>
      <tr>
        <td>Wednesday</td>
        <td><%= in_person_recovery_resource.wednesday_opening_hours.strftime('%I:%M %p') %></td>
        <td><%= in_person_recovery_resource.wednesday_closing_hours.strftime('%I:%M %p') %></td>
      </tr>
      <tr>
        <td>Thursday</td>
        <td><%= in_person_recovery_resource.thursday_opening_hours.strftime('%I:%M %p') %></td>
        <td><%= in_person_recovery_resource.thursday_closing_hours.strftime('%I:%M %p') %></td>
      </tr>
      <tr>
        <td>Friday</td>
        <td><%= in_person_recovery_resource.friday_opening_hours.strftime('%I:%M %p') %></td>
        <td><%= in_person_recovery_resource.friday_closing_hours.strftime('%I:%M %p') %></td>
      </tr>
      <tr>
        <td>Saturday</td>
        <td><%= in_person_recovery_resource.saturday_opening_hours.strftime('%I:%M %p') %></td>
        <td><%= in_person_recovery_resource.saturday_closing_hours.strftime('%I:%M %p') %></td>
      </tr>
      <tr>
        <td>Sunday</td>
        <td><%= in_person_recovery_resource.sunday_opening_hours.strftime('%I:%M %p') %></td>
        <td><%= in_person_recovery_resource.sunday_closing_hours.strftime('%I:%M %p') %></td>
      </tr>
    </table>

  <p>
    <strong>Information:</strong>
    <%= in_person_recovery_resource.information %>
  </p>

  <% if in_person_recovery_resource.services_tag_list.length != 0 %>
  <p>
    <strong>Services Tags:</strong>
    <%= in_person_recovery_resource.services_tag_list %>
  </p>
  <% end %>

   <% if in_person_recovery_resource.recovery_models_tag_list.length != 0 %>
  <p>
    <strong>Recovery Models Tags:</strong>
    <%= in_person_recovery_resource.recovery_models_tag_list %>
  </p>
  <% end %>

</div>
