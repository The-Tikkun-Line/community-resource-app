<%= form_with(model: community_resource) do |form| %>
  <% if community_resource.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(community_resource.errors.count, "error") %> prohibited this community_resource from being saved:</h2>

      <ul>
        <% community_resource.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, :required => true, class: "form-control" %>
  </div>

  <div>
    <%= form.label :hours_of_operation, style: "display: block" %>
    <%= form.text_field :hours_of_operation, :placeholder => "Example: M-F 9am-5pm, Sat-Sun 6am-2pm", :required => true, class: "form-control" %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.telephone_field :phone, :placeholder => "503-123-4567", :pattern => "[0-9]{3}-[0-9]{3}-[0-9]{4}", :required => true, class: "form-control" %>
  </div>

  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div>
    <%= form.label :website, style: "display: block" %>
    <%= form.url_field :website, class: "form-control", :placeholder => "Please start with https:// or http://" %>
  </div>

  <div>
    <%= form.label :information, style: "display: block" %>
    <%= form.text_area :information, :required => true, class: "form-control" %>
  </div>

  <div class='form-group'>
    <%= form.label :recovery_tag_list %>
    <%= form.text_field :recovery_tag_list, value: @community_resource.send(:recovery_tag_list).to_s %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
